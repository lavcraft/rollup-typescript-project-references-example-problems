{
  "scripts": {
    "build": "tsc --project tsconfig.json"
  },
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "incremental": true,
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": false,
    "declarationMap": true,
    "noImplicitAny": true,
    "module": "ES2020",
    "baseUrl": "./src",
    "outDir": "./build",
    "composite": false,
    "declaration": true,
    "paths": {
      "@shared/*": [
        "../../shared/build/*"
      ]
    }
  },
  "exclude": [
    "./build",
    "**/*.test.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],

  "references": [
    {
      "path": "../shared"
    }
  ]
}
